@model List<MASHROEE.ViewModel.RoleViewModel>

@{
    ViewData["Title"] = "Index";
}
<p>
    <a asp-action="AddRole">Create New Role</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Role Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
              @item.RoleName
            </td>
            <td>
                <a href="@Url.Action("DeleteRole","Role",new {rolename=@item.RoleName})">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
