@model MASHROEE.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input hidden asp-for="Id" value="@Model.Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="CategoriesDropdown">Category</label>
                <select name="CategoryName" id="categoryDropdown" class="form-control" asp-items="@Model.categories">
                        <option value="@Model.CategoryName">@Model.CategoryName</option>
                </select>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"> avaliable Quantity</label>
                <input asp-for="Quantity" class="form-control" placeholder="Enter avaliable Quantity" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>          
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price in $</label>
                <input asp-for="Price" class="form-control" placeholder="$" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <img src="@Model.image" class="card-img-top" alt="Image Not Found" style="height: 100px; object-fit: cover;">
                <label asp-for="image" class="control-label"></label>
                <input asp-for="image" type="file" class="form-control" />
                <span asp-validation-for="image" class="text-danger"></span>
                <input type="hidden" asp-for="image" value="@Model.image" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

