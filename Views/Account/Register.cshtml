@model MASHROEE.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid mt-5 px-0">
    <div class="card shadow-lg border-0 mx-auto" style="max-width: 600px;">
        <div class="card-header text-white text-center py-4" style="background: linear-gradient(135deg, #FFC300, #FF8C00);">
            <h2 class="mb-0">Join MASHROEE</h2>
        </div>
        <div class="card-body p-5">
            <form asp-action="Register" enctype="multipart/form-data" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-4">
                    <label asp-for="username" class="form-label fw-bold">Username</label>
                    <input asp-for="username" class="form-control form-control-lg" placeholder="Enter your username" required />
                    <span asp-validation-for="username" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Name" class="form-label fw-bold">Name</label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter your name" required />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Email" class="form-label fw-bold">Email</label>
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Gender" class="form-label fw-bold">Gender</label>
                    <select asp-for="Gender" class="form-control form-control-lg" required>
                        <option value="">Select your gender</option>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label fw-bold">Password</label>
                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter your password" required />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Phone" class="form-label fw-bold">Phone</label>
                    <input asp-for="Phone" class="form-control form-control-lg" placeholder="Enter your phone number" required />
                    <span asp-validation-for="Phone" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="imagefromuser" class="form-label fw-bold">Profile Image</label>
                    <input asp-for="imagefromuser" type="file" class="form-control form-control-lg" required />
                    <span asp-validation-for="imagefromuser" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="RoleName" class="form-label fw-bold">Register as</label>
                    <select asp-for="RoleName" class="form-control form-control-lg" required>
                        <option value="">Select Role</option>
                        <option value="User">User</option>
                        <option value="Supplier">Supplier</option>
                    </select>
                    <span asp-validation-for="RoleName" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-3">
                    <input type="submit" value="Create Account" class="btn btn-custom btn-lg fw-bold" />
                    <a href="@Url.Action("Login","Account")" class="btn btn-outline-custom btn-lg fw-bold">Already have an account? Log In</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-custom {
        background: linear-gradient(135deg, #FFC300, #FF8C00);
        border: none;
        color: white;
        border-radius: 8px;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(255, 140, 0, 0.4);
        }

    .btn-outline-custom {
        border: 2px solid #FFC300;
        color: #FFC300;
        border-radius: 8px;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .btn-outline-custom:hover {
            background-color: #FFC300;
            color: white;
        }

    .card {
        border-radius: 15px;
        overflow: hidden;
    }

    .form-control-lg {
        border-radius: 8px;
        padding: 12px 16px;
    }

    .form-label {
        font-size: 1.1rem;
        color: #333;
    }

    .card-header {
        border-radius: 15px 15px 0 0;
    }

    .card-footer {
        border-radius: 0 0 15px 15px;
    }
</style>