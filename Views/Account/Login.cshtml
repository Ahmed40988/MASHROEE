@model MASHROEE.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<link href="~/css/alert.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 500px;">
        <div class="card-header text-center py-4" style="background: #FFC300;">
            <h2 class="m-0">Login to MASHROEE</h2>
        </div>
        <div class="card-body px-5 py-4">
            <form asp-action="Login">
                <div asp-validation-summary="All" class="text-danger mb-4"></div>

                <div class="form-group mb-4">
                    <label asp-for="username" class="form-label fw-bold"></label>
                    <input asp-for="username" class="form-control form-control-lg" placeholder="Enter your username" required />
                    <span asp-validation-for="username" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="password" class="form-label fw-bold"></label>
                    <input asp-for="password" type="password" class="form-control form-control-lg" placeholder="Enter your password" required />
                    <span asp-validation-for="password" class="text-danger small"></span>
                </div>

                <div class="form-group form-check mb-4">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label fw-bold" asp-for="RememberMe">@Html.DisplayNameFor(model => model.RememberMe)</label>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-custom btn-lg fw-bold">Login</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3">
            <a asp-action="Register" class="btn btn-link text-decoration-none fw-bold">Register</a>
            <span class="text-muted">|</span>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let logoutSuccessMessage = '@TempData["LogoutSuccess"]';

            if (logoutSuccessMessage) {
                Swal.fire({
                    title: "Logged Out",
                    text: logoutSuccessMessage,
                    icon: "info",
                    confirmButtonColor: "#FFC300"
                });
            }
        });
    </script>
}


<!-- CSS Styles -->
<style>
    .btn-custom {
        background-color: #FFC300;
        border-color: #FFC300;
        color: #3D464D !important;
        border-radius: 8px;
        transition: background-color 0.3s ease;
        padding: 12px 24px;
    }

        .btn-custom:hover {
            background-color: #e0a800;
            border-color: #e0a800;
        }

    .form-control-lg {
        border-radius: 8px;
        padding: 12px 16px;
    }

    .card {
        border-radius: 12px;
    }

    .card-header {
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .card-footer {
        border-bottom-left-radius: 12px;
        border-bottom-right-radius: 12px;
    }

    .btn-link {
        color: #3D464D;
    }

        .btn-link:hover {
            color: #FFC300;
        }
</style>
