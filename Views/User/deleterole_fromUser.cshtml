
@{
    ViewData["Title"] = "deleterole_fromUser";
    var username = ViewBag.Username as string;
    var listroles = ViewBag.roles as List<string>;
}
<form asp-action="deleterole_fromUser" asp-route-username="@username">
    <div class="form-group">
        <label for="rolesDropdown">Select Role to Remove:</label>
        <select name="rolename" id="rolesDropdown" class="form-control">
            @foreach (var role in listroles)
            {
                <option value="@role">@role</option>
            }
        </select>
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-danger">🗑️ Remove</button>
    </div>
</form>


