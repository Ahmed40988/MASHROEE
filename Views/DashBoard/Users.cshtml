@model IEnumerable<MASHROEE.ViewModel.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid mt-5">
    <h2 class="text-center text-light mb-4">User Management</h2>

    <div class="row justify-content-center">
        <div class="col-12">
            <table class="table table-bordered table-dark table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Username</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Roles</th>
                        <th>Actions for Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(user.image))
                                {
                                    <img src="@user.image" alt="User Image"
                                         class="img-thumbnail" style="width: 100px; height: 100px;" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>@user.fullname</td>
                            <td>@user.Email</td>
                            <td>@user.phone</td>
                            <td>
                                <ul>
                                    @foreach (var role in user.Roles)
                                    {
                                        <li>
                                            @role 
                                        </li>
                                      
                                    }
                                </ul>
                            </td>
                            <td>
                                <a asp-action="addrole_forUser" asp-controller="User" asp-route-username="@user.UserName"
                                   class="btn btn-sm btn-outline-danger"> ➕ Add Roles</a>


                                <a asp-action="deleterole_fromUser" asp-controller="User" asp-route-username="@user.UserName" asp-route-username="username"
                                   class="btn btn-sm btn-outline-danger">🗑️ Delete </a>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Update" asp-controller="User" asp-route-username="@user.UserName"
                                       class="btn btn-sm btn-outline-warning me-2">
                                        ✏️ Edit
                                    </a>
                                    <a asp-action="Delete" asp-controller="User" asp-route-username="@user.UserName"
                                       class="btn btn-sm btn-outline-danger">
                                        🗑️ Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #343a40; /* لون خلفية غامق */
    }

    h2 {
        color: #f8f9fa;
    }

    .table img {
        border-radius: 50%;
    }

    .btn-outline-warning {
        color: #ffc107;
        border-color: #ffc107;
    }

    .btn-outline-danger {
        color: red;
        border-color: red;
    }
</style>
